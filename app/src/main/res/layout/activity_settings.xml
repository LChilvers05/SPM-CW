<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nightbackground"
    tools:context=".SettingsActivity">


    <TextView
        android:id="@+id/streakCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="167dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="167dp"
        android:gravity="center|center_horizontal"
        android:text="Streak:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/goalsTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/goalsTitle"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="81dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="77dp"
        android:gravity="center|center_horizontal"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/reminderTimeEntry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/streakCounter" />

    <EditText
        android:id="@+id/reminderTimeEntry"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="80dp"
        android:background="#3F51B5"
        android:backgroundTint="#030A32"
        android:ems="10"
        android:hint="Bedtime"
        android:inputType="time"
        android:outlineProvider="none"
        android:padding="1dp"
        android:textAlignment="center"
        android:textColor="#FDFCFC"
        android:textColorHint="#FFFCFC"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/sleepGoal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goalsTitle" />

    <EditText
        android:id="@+id/sleepGoal"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="219dp"
        android:background="#3F51B5"
        android:backgroundTint="#030A32"
        android:ems="10"
        android:hint="Length goal"
        android:inputType="time"
        android:outlineProvider="none"
        android:padding="1dp"
        android:textAlignment="center"
        android:textColor="#FDFCFC"
        android:textColorHint="#FFFCFC"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reminderTimeEntry" />

</androidx.constraintlayout.widget.ConstraintLayout>